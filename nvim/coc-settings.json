{
    "coc.preferences.extensionUpdateCheck": "daily",
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": ["*.py", "yaml", "json"],

    // Coc diagnostic settings: https://github.com/iamcco/coc-diagnostic
    "diagnostic-languageserver.enable": true,
    "diagnostic-languageserver.filetypes": {
        "python": ["pylint", "mypy"]
    },
    "diagnostic-languageserver.formatFiletypes": {
        "python": ["black", "isort", "docformatter"]
    },
    "diagnostic-languageserver.formatters": {
        "black": {
            "command": "black",
            // "args": ["-q", "-"]
        },
        "isort": {
            "command": "isort",
            // "args": ["-q", "-"]
        },
        "docformatter": {
            "command": "docformatter",
            // "args": ["-"]
        }
    },
    "diagnostic.checkCurrentLine": true,
    "diagnostic.virtualText": true,
    "diagnostic.enableMessage": "jump",
    "diagnostic.errorSign": "üëπ",
    "diagnostic.warningSign": "‚ö†",
    "diagnostic.infoSign": "üôä",
    "diagnostic.hintSign": "üîà",
    "diagnostic-languageserver.mergeConfig": true,
    "diagnostic-languageserver.linters": {
        "python": ["pylint", "mypy"]
    },

    // Coc git settings.
    "git.enableGutters": true,
    "git.addedSign.text": "‚îÉ",
    "git.changedSign.text": "‚îÉ",
    "git.removedSign.text": "‚ñÅ",
    "git.topRemovedSign.text": "‚ñî",
    "git.changeRemovedSign.text": "‚ñî",

    // Coc-pyright settings:
    "pyright.enable": true,
    "pyright.disableDiagnostics": true,  // disable diagnostics only for pyright. If using pylint and mypy, they will still work as expected.
    "python.analysis.autoImportCompletions": true,
    "python.linting.banditEnabled": true,
    "python.linting.banditPath": "bandit",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "--max-line-length=100"
    ],
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": true,
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "mypy",
    "python.formatting.blackPath": "/home/clebson/.local/bin/black",
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [],
    "python.sortImports.path": "/home/clebson/.local/bin/isort",
    "cSpell.enabledLanguageIds": [
      "asciidoc",
      "c",
      "cpp",
      "csharp",
